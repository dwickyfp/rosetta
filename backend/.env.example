# Application Configuration
APP_NAME=Rosetta ETL Platform
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database Configuration (Application Metadata DB)
DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/rosetta_metadata
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=False

# Connection Pool Settings
DB_POOL_PRE_PING=True
DB_POOL_USE_LIFO=True

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# WAL Monitoring Configuration
WAL_MONITOR_ENABLED=True
WAL_MONITOR_INTERVAL_SECONDS=300
WAL_MONITOR_TIMEOUT_SECONDS=30
WAL_MONITOR_MAX_RETRIES=3

# Background Tasks
BACKGROUND_TASK_ENABLED=True
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# Metrics & Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
