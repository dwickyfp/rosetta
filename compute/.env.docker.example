# =============================================================================
# ROSETTA DOCKER COMPOSE ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.docker and fill in the values
# Usage: docker compose -f docker-compose-app.yml --env-file .env.docker up -d
# =============================================================================

# -----------------------------------------------------------------------------
# COMPUTE NODE (Rust Worker)
# -----------------------------------------------------------------------------
RUST_LOG=info
CONFIG_DATABASE_URL=postgres://postgres:postgres@postgres:5432/postgres
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# WEB CONTAINER
# -----------------------------------------------------------------------------

# Port Mapping
WEB_PORT=80
API_PORT=8000

# Frontend Environment (Build-time)
VITE_CLERK_PUBLISHABLE_KEY=
VITE_API_URL=/api

# Backend - Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/rosetta_metadata

# Backend - Application
APP_NAME=Rosetta ETL Platform
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO
ROSETTA_TIMEZONE=Asia/Jakarta

# Backend - Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-in-production-to-a-secure-random-string
API_KEY=change-this-in-production-to-a-secure-api-key
CORS_ORIGINS=["http://localhost","http://localhost:80"]

# Backend - Background Tasks
BACKGROUND_TASK_ENABLED=True

# Run Alembic migrations on startup (set to 'true' for first run)
RUN_MIGRATIONS=false
